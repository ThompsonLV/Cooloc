<div class="container">
  <div class="header">
    <h1>Mes colocataires</h1>
    <%= link_to "CrÃ©er un nouveau Cooloc", new_flatmate_path, class: "btn btn-flat" %>
  </div>
  <div class="cards-grid">
    <% @flatmates.each do |flatmate|%>
      <%= link_to flatmate_path(flatmate), class: "card-link" do %>
      <div class="card-image">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-infos">
          <h4><%= flatmate.first_name %> <%= flatmate.last_name.upcase %></h4>
            <% case flatmate.echeance_birthday %>
              <% when 0 %>
                <p><strong>C'est son anniversaire !!</strong></p>
              <% when 1 %>
                <p>Anniversaire demain !!</p>
              <% else %>
                <p>Anniversaire dans <%= flatmate.echeance_birthday %> jours</p>
            <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
